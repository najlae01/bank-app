@model Tuple<Mouvement, Compte>

@{
    ViewData["Title"] = "Delete Mouvement";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="mb-4">Delete Confirmation</h1>
        <div class="alert alert-danger">
            Are you sure you want to delete this transaction?
        </div>
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Item1.id</dd>

            <dt class="col-sm-3">Transaction Amount:</dt>
            <dd class="col-sm-9">@Model.Item1.montant</dd>

            <dt class="col-sm-3">Account Holder Name:</dt>
            <dd class="col-sm-9">@Model.Item2.nom</dd>

            <dt class="col-sm-3">Date:</dt>
            <dd class="col-sm-9">@Model.Item1.date_mnt.ToString("dd-MM-yyyy")</dd>

            <dt class="col-sm-3">Transaction Type:</dt>
            <dd class="col-sm-9">
                @if (Model.Item1.montant > 0)
                {
                    <span>Deposit</span>
                }
                else
                {
                    <span>Withdrawal</span>
                }
            </dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="@Model.Item1.id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-controller="Compte" asp-action="Details" asp-route-id="@Model.Item2.id">Cancel</a>
            </div>
        </form>
    </div>
</div>


<script>
    console.log(@Html.Raw(Json.Serialize(ViewBag.id)));
</script>
