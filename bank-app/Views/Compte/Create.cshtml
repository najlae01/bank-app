@model Compte

@{
    ViewData["Title"] = "Add a New Account";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Add a New Account</h1>
        <hr />
        <form asp-action="Create" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nom" class="font-weight-bold">Account Holder Name:</label>
                <input asp-for="nom" class="form-control" />
                <span asp-validation-for="nom" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-secondary ml-2" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>
