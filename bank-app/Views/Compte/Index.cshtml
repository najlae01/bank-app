@model IEnumerable<Compte>

@{
    ViewData["Title"] = "List of Accounts";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>List of Accounts</h1>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.nom)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.nom)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Mouvement" asp-action="AddTransaction" asp-route-id="@item.id">
                                <i class="bi bi-gear"></i> Make an operation
                            </a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.id">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <a class="btn btn-success float-right" asp-controller="Compte" asp-action="Create">
            <i class="bi bi-plus-circle"></i> New Account
        </a>
    </div>
</div>
